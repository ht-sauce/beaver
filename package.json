    "node": ">= 16"
  },
  "devDependencies": {
    "@beaver-internal/eslint-config": "workspace:*",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^5.1.5",
    "vite": "^4.3.9",
    "vitest": "^0.31.4",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.2"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "eslint --fix"
